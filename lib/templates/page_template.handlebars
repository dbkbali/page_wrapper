<section>
  <div class="page-header">
    <h1><%= class_name.humanize.pluralize %></h1>
  </div>

  <div id="<%= class_name.underscore %>-list">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Year</th>
        </tr>
      </thead>

      <tbody>
        {{#if controller.content.isLoaded}}
          {{#each controller.currentPage.<%= class_name.underscore.pluralize %>}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{year}}</td>
            </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
  {{view PageWrapper.PaginationView pageBinding="controller.currentPage"}}
</section>
